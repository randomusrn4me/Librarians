<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" fx:id="rootPane" prefHeight="301.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddBookController">
    <children>
      <VBox prefHeight="326.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
              <JFXTextField fx:id="title" alignment="TOP_LEFT" focusColor="#2f5ad0" labelFloat="true" promptText="Title" unFocusColor="#5e751c">
                  <padding>
                      <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
              </JFXTextField>
              <JFXTextField fx:id="author" alignment="TOP_LEFT" focusColor="#2f5ad0" labelFloat="true" promptText="Author" unFocusColor="#5e751c">
                  <padding>
                      <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
              </JFXTextField>
              <JFXTextField fx:id="year" alignment="TOP_LEFT" focusColor="#2f5ad0" labelFloat="true" promptText="Year" unFocusColor="#5e751c">
                  <padding>
                      <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
              </JFXTextField>
              <JFXTextField fx:id="publisher" alignment="TOP_LEFT" focusColor="#2f5ad0" labelFloat="true" promptText="Publisher" unFocusColor="#5e751c">
                  <padding>
                      <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
              </JFXTextField>
            <JFXTextField fx:id="id" alignment="TOP_LEFT" focusColor="#2f5ad0" labelFloat="true" promptText="ID" unFocusColor="#5e751c">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </JFXTextField>
            <TilePane alignment="CENTER">
               <children>
                    <JFXButton fx:id="addBook" onAction="#handleAddBookButtonPushed" prefHeight="40.0" prefWidth="230.0" stylesheets="@ui.addbook.css" text="Add" />
                    <JFXButton fx:id="cancel" onAction="#handleCancelButtonPushed" prefHeight="40.0" prefWidth="230.0" stylesheets="@ui.addbook.css" text="Cancel" />
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </padding>
            </TilePane>
         </children>
      </VBox>
    </children>
</AnchorPane>

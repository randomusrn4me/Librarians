<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="301.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.adduser.AddUserController">
   <children>
      <VBox prefHeight="301.0" prefWidth="500.0">
         <children>
            <JFXTextField fx:id="fullname" alignment="TOP_LEFT" focusColor="#2f5ad0" labelFloat="true" promptText="Full Name" unFocusColor="#5e751c">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </JFXTextField>
            <JFXTextField fx:id="username" alignment="TOP_LEFT" focusColor="#2f5ad0" labelFloat="true" promptText="Username" unFocusColor="#5e751c">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </JFXTextField>
            <JFXTextField fx:id="email" alignment="TOP_LEFT" focusColor="#2f5ad0" labelFloat="true" promptText="E-mail" unFocusColor="#5e751c">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </JFXTextField>
            <JFXTextField fx:id="address" alignment="TOP_LEFT" focusColor="#2f5ad0" labelFloat="true" promptText="Home Address" unFocusColor="#5e751c">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </JFXTextField>
            <JFXTextField fx:id="phonenumber" alignment="TOP_LEFT" focusColor="#2f5ad0" labelFloat="true" promptText="Phone Number" unFocusColor="#5e751c">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </JFXTextField>
            <TilePane alignment="CENTER">
               <children>
                  <JFXButton fx:id="addUser" onAction="#handleAddUserButtonPushed" prefHeight="40.0" prefWidth="230.0" stylesheets="@ui.addbook.css" text="Add" />
                  <JFXButton fx:id="cancel" onAction="#handleCancelButtonPushed" prefHeight="40.0" prefWidth="230.0" stylesheets="@ui.addbook.css" text="Cancel" />
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </padding>
            </TilePane>
         </children>
      </VBox>
   </children>
</AnchorPane>

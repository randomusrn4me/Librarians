<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="rootPane" prefHeight="301.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.adduser.AddUserController">
   <children>
      <VBox prefHeight="315.0" prefWidth="500.0">
         <children>
            <JFXTextField fx:id="fullname" alignment="TOP_LEFT" focusColor="#030303" labelFloat="true" promptText="Full Name" unFocusColor="#5e751c">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </JFXTextField>
            <JFXTextField fx:id="username" alignment="TOP_LEFT" focusColor="#0a0a0a" labelFloat="true" promptText="Username" unFocusColor="#5e751c">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </JFXTextField>
            <JFXTextField fx:id="email" alignment="TOP_LEFT" focusColor="BLACK" labelFloat="true" promptText="E-mail" unFocusColor="#5e751c">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </JFXTextField>
            <JFXTextField fx:id="address" alignment="TOP_LEFT" focusColor="BLACK" labelFloat="true" promptText="Home Address" unFocusColor="#5e751c">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </JFXTextField>
            <JFXTextField fx:id="phonenumber" alignment="TOP_LEFT" focusColor="BLACK" labelFloat="true" promptText="Phone Number" unFocusColor="#5e751c">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </JFXTextField>
            <TilePane alignment="TOP_CENTER" prefHeight="82.0" prefWidth="500.0" style="-fx-background-color: d9dddc;">
               <children>
                  <JFXButton fx:id="addUser" alignment="CENTER" onAction="#handleAddUserButtonPushed" prefHeight="40.0" prefWidth="196.0" style="-fx-background-color: #171B2A; -fx-background-radius: 100; -fx-text-fill: white;" stylesheets="@ui.addbook.css" text="Add" textAlignment="CENTER">
                     <opaqueInsets>
                        <Insets bottom="20.0" />
                     </opaqueInsets>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <font>
                        <Font size="15.0" />
                     </font></JFXButton>
                  <JFXButton fx:id="cancel" alignment="CENTER" contentDisplay="TOP" nodeOrientation="LEFT_TO_RIGHT" onAction="#handleCancelButtonPushed" prefHeight="40.0" prefWidth="202.0" style="-fx-background-color: #171B2A; -fx-background-radius: 100; -fx-text-fill: white;" stylesheets="@ui.addbook.css" text="Cancel">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <font>
                        <Font size="15.0" />
                     </font></JFXButton>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </padding>
            </TilePane>
         </children>
      </VBox>
   </children>
</AnchorPane>
